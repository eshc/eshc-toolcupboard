        xmlns:ui="clr-namespace:ToolCupboard.UIHelpers.Controls;assembly=ToolCupboard.UIHelpers"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        Width="480"
        Height="800"
        x:Class="ToolCupboard.App.Views.MainWindow"
