@model UnknownCardsModel
@{
    ViewData["Title"] = "Unknown Cards";
}

<div class="text-center">
    <h1 class="display-4">Unknown Card Log</h1>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Last Date</th>
            <th>Card Id</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var card in Model.Cards) {
            <tr>
                <td>@card.LastDate</td>
                <td>@card.CardId</td>
                <th>
                    @Html.ActionLink("Create Tool", "CreateTool", "Admin", new { id = card.CardId }, new { @class = "btn btn-outline-primary btn-sm" })
                    @Html.ActionLink("Create User", "CreateUser", "Admin", new { id = card.CardId }, new { @class = "btn btn-outline-primary btn-sm" })
                </th>
            </tr> 
        }
    </tbody>
</table>

